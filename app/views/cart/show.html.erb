<h1>Your Cart</h1>

<% if @cart_items.any? %>
	<ul>
	<% @cart_items.each do |item| %>
		<li><%= item[:name] %>, $<%= item[:price] %> |
		<%= link_to "Remove", cart_remove_path(:id => item[:id]), method: :delete %></li>
	<% end %>
	</ul>
	<%= link_to "Clear Cart", cart_clear_url, method: :delete %> |
<% else %>
	<p>You have nothing in your cart!</p> <br/>
<% end %>
<%= link_to "View Products", products_url %>
