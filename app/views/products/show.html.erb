<h2><%= @product.name %></h2>
<h3>Price: $<%= @product.price %></h3>
<hr/>
<%= simple_format @product.description %>
<hr/>
<%= link_to 'Add to Cart', cart_add_url(@product.id), method: :post %> |
<% if current_user %>
	<%= link_to 'Edit', edit_product_path(@product) %> |
<% end %>
<%= link_to 'Back', products_path %>
