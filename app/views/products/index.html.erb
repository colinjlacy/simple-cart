
<h1>Listing Products</h1>

<% if @products %>
<ul>
  <% @products.each do |product| %>
  	<li><%= link_to product.name + " - $" + product.price.to_s, product_url(product.id)%>
	  <% if current_user %>
	  | <%= link_to "Edit", edit_product_url(product.id) %>
	  <% end %>
	</li>
  <% end %>
</ul>
<% end %>
<br>
<% if current_user %>
	<%= link_to 'New Product', new_product_path %> |
<% end %>
<a href="/cart">Your Cart</a>